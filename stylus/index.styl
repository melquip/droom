@import 'nib'
@import 'functions.styl'
@import 'config.styl'
// plugins
@import '../css/icons.css'
@import '../css/animate.min.css'
@import '../css/hamburger.css'

.inner
	containers(300, $containers, true)

custom-reset()

@keyframes loading
	0%
		opacity 1
		visibility visible
	100%
		opacity 0
		visibility hidden

#loading
	size 100%
	z-index 1000
	fixed top 0 left 0
	background-color $white
	transition all .2s ease-in-out
	animation loading .2s linear 1.5s 1 forwards;
	.inner
		height 100%
	img
		absolute top 50% left 50%
		transform translate(-50%, -50%)
		
header 
	.flex
		.column:last-child
			text-align right
	
main
	background-color lightgrey
footer
	background-color grey

apply_media_cache()