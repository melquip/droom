@import 'nib'
@import 'functions.styl'
@import 'config.styl'
// plugins
@import '../css/icons.css'
@import '../css/animate.min.css'
@import '../css/hamburger.css'

.inner
	containers(300, $containers, true)

custom-reset()

@keyframes loading
	0%
		opacity 1
		visibility visible
	100%
		opacity 0
		visibility hidden

#loading
	size 100%
	z-index 1000
	fixed top 0 left 0
	background-color $white
	transition all .2s ease-in-out
	animation loading .2s linear 1.5s 1 forwards;
	.inner
		height 100%
	img
		absolute top 50% left 50%
		transform translate(-50%, -50%)

header, main, footer 
	max-width 1920px
	margin 0 auto
body 
	padding-top 70px
	
header 
	z-index 100
	size 100% 70px
	fixed top 0 left 0
	background-color $white

	img
		height 40px
		
	.flex
		.column
			&:first-child
				padding top 15px bottom 15px	
			&:last-child
				display flex
				justify-content flex-end

	.login, .hamburger
		size 70px

	.login
		display block
		background-color $blue-dark
	.hamburger
		padding 0
		background-color $blue-light
		transition all .33s ease-in-out
		&.is-active
			background-color $gray
			.hamburger-inner
				&, &:after, &:before
					background-color $white
	.hamburger-box
		size 20px 14px
	.hamburger-inner
		margin-top 0
		&, &:after, &:before
			size 20px 2px
			border-radius 0
			background-color $white
		&:before
			top -6px
		&:after
			bottom -6px

.intro 
	background linear-gradient(180deg, rgba($blue-light,1) 0%, rgba($blue-dark,1) 100%)
	.inner
		min-height calc(100vh - 70px)

.features
	background $blue-dark
	.inner
		min-height 50vh

footer
	height 100px
	background-color $blue-light

apply_media_cache()